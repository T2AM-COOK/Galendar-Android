<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.galendar.feature.main.HomeFragment"
        android:label="HomeFragment" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.galendar.feature.main.SearchViewFragment"
        android:label="SearchViewFragment">
        <action
            android:id="@+id/action_searchViewFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_bookmark"
        android:name="com.example.galendar.feature.main.BookmarkFragment"
        android:label="BookmarkFragment" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.galendar.feature.main.ProfileFragment"
        android:label="ProfileFragment" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.galendar.feature.contests.DetailFragment"
        android:label="DetailFragment">
        <argument
            android:name="contestId"
            app:argType="integer" />
    </fragment>

</navigation>