<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="395dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="403dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="365dp"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardextrabold"
            android:text="대회제목"
            android:textColor="@color/black"
            android:maxEms="13"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@id/img"
            app:layout_constraintStart_toStartOf="@id/img"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/pretendardbold"
            android:maxEms="18"
            android:maxLines="2"
            android:text="대회정보 설명"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더보기"
            app:layout_constraintStart_toStartOf="@id/content"
            app:layout_constraintTop_toBottomOf="@id/content" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/paperlogybold"
            android:text="접수기간"
            android:textColor="@color/MainColor"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/content" />

        <TextView
            android:id="@+id/submitDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardbold"
            android:text="접수기간날짜"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/submit"
            app:layout_constraintTop_toBottomOf="@id/submit"/>

        <TextView
            android:id="@+id/contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paperlogybold"
            android:text="대회기간"
            android:textColor="@color/MainColor"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/submit"
            app:layout_constraintTop_toBottomOf="@id/submitDate"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/contestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardbold"
            android:text="대회기간날짜"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/submit"
            app:layout_constraintTop_toBottomOf="@id/contest"
            />

        <TextView
            android:id="@+id/targettext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paperlogybold"
            android:text="참여대상"
            android:textColor="@color/MainColor"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/submit"
            app:layout_constraintTop_toBottomOf="@id/contestDate"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardbold"
            android:text="타겟1,2,3,4,5"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/targettext"
            app:layout_constraintTop_toBottomOf="@id/targettext"/>

        <TextView
            android:id="@+id/regiontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paperlogybold"
            android:text="대회 지역"
            android:textColor="@color/MainColor"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/target"
            app:layout_constraintTop_toBottomOf="@id/target"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardbold"
            android:text="지역1,2,3,4,5"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/regiontext"
            app:layout_constraintTop_toBottomOf="@id/regiontext"/>

        <TextView
            android:id="@+id/costtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paperlogybold"
            android:text="참가비용"
            android:textColor="@color/MainColor"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/regiontext"
            app:layout_constraintTop_toBottomOf="@id/region"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardbold"
            android:text="2억"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@id/costtext"
            app:layout_constraintTop_toBottomOf="@id/costtext"/>


        <TextView
            android:id="@+id/click_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더 자세한 내용을 확인하시려면 포스터를 클릭해 주시기 바랍니다."
            app:layout_constraintStart_toStartOf="@id/img"
            app:layout_constraintTop_toBottomOf="@id/cost"
            android:textColor="@color/red"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/bookmarkHeart"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bookmarkheart"
            app:layout_constraintStart_toStartOf="@id/content"
            app:layout_constraintTop_toBottomOf="@id/content"
            android:layout_marginTop="10dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/shareBtn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            app:layout_constraintStart_toStartOf="@id/bookmarkHeart"
            android:layout_marginStart="50dp"
            app:layout_constraintBottom_toBottomOf="@id/bookmarkHeart"
            android:layout_marginBottom="-50dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>