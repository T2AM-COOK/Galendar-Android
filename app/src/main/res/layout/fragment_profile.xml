<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_root"
    android:background="@color/white"
    tools:context=".feature.main.ProfileFragment">

    <!-- 배경 이미지 -->
    <ImageView
        android:id="@+id/mybackground"
        android:layout_width="0dp"
        android:layout_height="820dp"
        android:src="@drawable/mybackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-5dp"/>

    <!-- 아이콘 이미지 -->
    <ImageView
        android:id="@+id/myicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/myicon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- 인사 텍스트 -->
    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서진교님, 안녕하세요!"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/myicon"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="220dp"/>

    <!-- 내 정보 텍스트 -->
    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 정보"
        android:textColor="@color/black"
        android:fontFamily="@font/robotoregular"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="290dp"/>

    <!-- 구분선 -->
    <ImageView
        android:id="@+id/grayline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/grayline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_text"
        android:layout_marginTop="5dp"/>

    <!-- 이름 텍스트 -->
    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@id/info_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="330dp"
        />

    <TextView
        android:id="@+id/name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서진교"
        android:textColor="@color/grayyy"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="@id/name_label"
        app:layout_constraintEnd_toEndOf="@id/grayline"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"/>

    <!-- 이메일 텍스트 -->
    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@id/name_label"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/email_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sksdldbwls0527@gmail.com"
        android:textColor="@color/grayyy"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="@id/email_label"
        app:layout_constraintEnd_toEndOf="@id/name_value"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/grayline2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/grayline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_text"
        android:layout_marginTop="110dp"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/name_label"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴"
        android:textColor="@color/red"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/name_label"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        android:layout_marginTop="120dp"/>
    <TextView
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약관 동의"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/name_label"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        android:layout_marginTop="160dp"/>
    <TextView
        android:id="@+id/personalInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 처리방침"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/name_label"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        android:layout_marginTop="200dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

