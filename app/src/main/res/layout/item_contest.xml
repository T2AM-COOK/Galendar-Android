<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="163dp">

    <!-- ImageView -->
    <ImageView
        android:id="@+id/ivContestImage"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:contentDescription="@string/contest_image"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Title TextView -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:ellipsize="end"
        android:maxLines="2"
        android:fontFamily="@font/pretendardextrabold"
        android:singleLine="false"
        android:textSize="20sp"
        android:layout_marginStart="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toEndOf="@id/ivContestImage"
        app:layout_constraintBottom_toTopOf="@id/tvSubmitEndDate"/>

    <!-- Submit End Date TextView -->
    <TextView
        android:id="@+id/tvSubmitEndDate"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="마감일"
        android:fontFamily="@font/pretendardbold"
        android:textSize="17sp"
        android:singleLine="false"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginEnd="4dp"
        app:layout_constraintStart_toStartOf="@id/tvTitle" />

    <!-- Contest Date TextView -->
    <TextView
        android:id="@+id/tvContestDate"
        android:layout_height="wrap_content"
        android:text="대회날짜"
        android:textSize="17sp"
        android:singleLine="false"
        android:maxEms="13"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/tvSubmitEndDate"
        app:layout_constraintStart_toStartOf="@id/tvSubmitEndDate"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="260dp"
    />

    <ImageView
        android:id="@+id/bookmarkHeart"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/bookmarkheart"
        app:layout_constraintStart_toEndOf="@id/tvContestDate"
        app:layout_constraintBottom_toTopOf="@id/tvContestDate"
        android:layout_marginBottom="-30dp"
        android:layout_marginStart="-20dp"
        android:clickable="true"/>






</androidx.constraintlayout.widget.ConstraintLayout>



